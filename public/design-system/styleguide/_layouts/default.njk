<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,300,400,600,700,800&subset=latin,latin-ext,cyrillic,cyrillic-ext,greek,greek-ext,vietnamese' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/../styles.bundle.css">

    <title>
        {{ page.title }} | {{ site.title }}
    </title>
</head>
<body>
    <div class="c-fractal-page">
        <div class="c-fractal-sidebar">
            <a href="/design-system/" class="c-fractal-sidebar__branding">
                <img
                    src="https://www.eslgaming.com/sites/all/themes/stability/stability_sub/whitelogo.png"
                    style="max-width: 100%"
                >
            </a>

            <nav class="c-fractal-navigation">
                <h4 class="c-fractal-sidebar__header">
                    Pages
                </h4>

                <ul class="c-fractal-navigation__list">
                    {% for page in pages.filterByTag('nav').sortBy('position').all() %}
                        <li>
                            <a class="c-fractal-navigation__item" href="/design-system{{ page.permalink }}">
                                {{ page.label }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>

                <h4 class="c-fractal-sidebar__header">
                    Guidelines
                </h4>

                <ul class="c-fractal-navigation__list">
                    {% for page in pages.filterByTag('guidelines').sortBy('position').all() %}
                        <li>
                            <a class="c-fractal-navigation__item" href="/design-system{{ page.permalink }}">
                                {{ page.label }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>

                {% for type in components.getTypes() %}
                    <h4 class="c-fractal-sidebar__header">
                        {{ type }}
                    </h4>

                    <ul class="c-fractal-navigation__list">
                        {% for group in components.getGroupsByType(type) %}
                            <div style="margin-bottom: 2rem;">
                                {% for component in components.getComponentsByTypeAndGroup(type, group) %}
                                    <li>
                                        <a class="c-fractal-navigation__item" href="/design-system{{ permalink('components', component) }}">
                                            <span class="c-fractal-navigation__item__label">
                                                {{ component.label }}
                                            </span>

                                            <svg
                                                class="c-fractal-navigation__item__status c-fractal-navigation__item__status--{{ component.status.id }}"
                                                viewBox="0 0 24 24"
                                                xmlns="http://www.w3.org/2000/svg"
                                            >
                                                <circle cx="12" cy="12" r="10"/>
                                            </svg>
                                        </a>
                                    </li>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </ul>
                {% endfor %}
            </nav>
        </div>

        <main class="c-fractal-content">
            {% block content %}{% endblock %}
        </main>
    </div>

    <script
        src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E="
        crossorigin="anonymous"
    ></script>

    <script src="/design-system/assets/active-link.js"></script>
</body>
</html>
